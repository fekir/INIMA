{
	"builders": [
		{
			"type": "vmware-vmx",
			"vm_name": "{{ user `vm_name` }}",
			"output_directory": "out/vmware/{{user `vm_name`}}_mate",
			"headless": "{{user `headless`}}",
			"http_directory": "{{user `http_directory`}}",
			"source_path": "{{user `source_path`}}",
			"shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -h now",
			"ssh_password": "{{user `password`}}",
			"ssh_username": "{{user `username`}}",
			"ssh_wait_timeout": "10000s",
			"vmx_data": {
				"memsize": "{{user `memory`}}",
				"numvcpus": "{{user `cpus`}}"
			}
		}
	],
	"provisioners": [
		{
			"type": "file",
			"source": "script/setup_debian_functions.sh",
			"destination": "/tmp/setup_debian_functions.sh"
		},
		{
			"type": "shell",
			"pause_before": "5s",
			"expect_disconnect": "true",
			"environment_vars": [
				"SETUP_MATE=true",
				"SETUP_VMACHINE={{user `vmachine`}}",
				"SETUP_PACKAGES={{user `packages`}}",
				"SETUP_CLEAN={{user `cleanup`}}",
				"SSH_USERNAME={{user `username`}}",
				"SSH_PASSWORD={{user `password`}}",
				"http_proxy={{user `http_proxy`}}",
				"https_proxy={{user `https_proxy`}}",
				"ftp_proxy={{user `ftp_proxy`}}",
				"rsync_proxy={{user `rsync_proxy`}}",
				"no_proxy={{user `no_proxy`}}"
			],
			"execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
			"scripts": [
				"./script/setup_debian.sh"
			]
		}
	],
	"variables": {
		"cpus": "1",
		"memory": "512",
		"vram": "32",
		"headless": "true",
		"no_proxy": "{{env `no_proxy`}}",
		"rsync_proxy": "{{env `rsync_proxy`}}",
		"ftp_proxy": "{{env `ftp_proxy`}}",
		"http_proxy": "{{env `http_proxy`}}",
		"https_proxy": "{{env `https_proxy`}}",
		"source_path": "out/vmware/debian_base/debian.vmx",
		"password": "123456",
		"username": "debianuser",
		"version": "0.1.0",
		"vm_name": "debian",
		"locale": "en_US",
		"keymap": "en",
		"vmachine": "linux",
		"packages": "neomutt",
		"cleanup": ""
	}
}
